sub a, x
set b, i
shl b, 6
sub a, b
add a, 16384
set [xsin], a

set a, y  ; y*sin
mul a, i
set b, o
shr a, 8
shl b, 8
add a, b
sub a, y
set b, i
shl b, 6
sub a, b
add a, 16384
set [ysin], a

set a, x  ; x*cos
mul a, j
set b, o
shr a, 8
shl b, 8
add a, b
sub a, x
set b, j
shl b, 6
sub a, b
add a, 16384
set [xcos], a

set a, y  ; y*cos
