set b, o
shr a, 8
shl b, 8
add a, b
sub a, y
set b, j
shl b, 6
sub a, b
add a, 16384
set [ycos], a

set a, [xcos]
sub a, [ysin]

set b, [xsin]
add b, [ycos]

set j, pop
set i, pop
set pc, pop

